{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "lib": ["es2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "../../.."
  },
  "exclude": ["**/fixtures/*"]
}
